<?php

namespace Modules\{{moduleName}}\Tests\Feature;

use Tests\TestCase;
use Modules\User\Models\User;
use Modules\{{moduleName}}\Models\{{modelName}};

class {{modelName}}UpdateTest extends TestCase
{
    private function getAdminUser(): User
    {
        return User::where('email', 'admin@example.com')->firstOrFail();
    }

    private function getTechUser(): User
    {
        return User::where('email', 'tech@example.com')->firstOrFail();
    }

    private function getCustomerUser(): User
    {
        return User::where('email', 'customer@example.com')->firstOrFail();
    }

    public function test_admin_can_update_{{modelName}}(): void
    {
        $admin = $this->getAdminUser();
        ${{modelNameLower}} = {{modelName}}::factory()->create();

        $data = [
            'type' => '{{resourceType}}',
            'id' => (string) ${{modelNameLower}}->id,
            'attributes' => [
                'name' => 'Updated {{modelName}}',
                'description' => 'Updated description',
                'is_active' => false
            ]
        ];

        $response = $this->actingAs($admin, 'sanctum')
            ->jsonApi()
            ->expects('{{resourceType}}')
            ->withData($data)
            ->patch("/api/v1/{{resourceType}}/{${{modelNameLower}}->id}");

        $response->assertOk();
        
        $this->assertDatabaseHas('{{tableName}}', [
            'id' => ${{modelNameLower}}->id,
            'name' => 'Updated {{modelName}}',
            'description' => 'Updated description',
            'is_active' => false
        ]);
    }

    public function test_admin_can_partially_update_{{modelName}}(): void
    {
        $admin = $this->getAdminUser();
        ${{modelNameLower}} = {{modelName}}::factory()->create([
            'name' => 'Original Name',
            'description' => 'Original Description'
        ]);

        $data = [
            'type' => '{{resourceType}}',
            'id' => (string) ${{modelNameLower}}->id,
            'attributes' => [
                'name' => 'Partially Updated Name'
                // description should remain unchanged
            ]
        ];

        $response = $this->actingAs($admin, 'sanctum')
            ->jsonApi()
            ->expects('{{resourceType}}')
            ->withData($data)
            ->patch("/api/v1/{{resourceType}}/{${{modelNameLower}}->id}");

        $response->assertOk();
        
        $this->assertDatabaseHas('{{tableName}}', [
            'id' => ${{modelNameLower}}->id,
            'name' => 'Partially Updated Name',
            'description' => 'Original Description'
        ]);
    }

    public function test_admin_can_update_{{modelName}}_metadata(): void
    {
        $admin = $this->getAdminUser();
        ${{modelNameLower}} = {{modelName}}::factory()->create();

        $metadata = [
            'updated_field' => 'new_value',
            'priority' => 'urgent',
            'tags' => ['important', 'updated']
        ];

        $data = [
            'type' => '{{resourceType}}',
            'id' => (string) ${{modelNameLower}}->id,
            'attributes' => [
                'metadata' => $metadata
            ]
        ];

        $response = $this->actingAs($admin, 'sanctum')
            ->jsonApi()
            ->expects('{{resourceType}}')
            ->withData($data)
            ->patch("/api/v1/{{resourceType}}/{${{modelNameLower}}->id}");

        $response->assertOk();
        
        ${{modelNameLower}}->refresh();
        $this->assertEquals($metadata, ${{modelNameLower}}->metadata);
    }

    public function test_customer_user_cannot_update_{{modelName}}(): void
    {
        $customer = $this->getCustomerUser();
        ${{modelNameLower}} = {{modelName}}::factory()->create();

        $data = [
            'type' => '{{resourceType}}',
            'id' => (string) ${{modelNameLower}}->id,
            'attributes' => [
                'name' => 'Unauthorized Update'
            ]
        ];

        $response = $this->actingAs($customer, 'sanctum')
            ->jsonApi()
            ->expects('{{resourceType}}')
            ->withData($data)
            ->patch("/api/v1/{{resourceType}}/{${{modelNameLower}}->id}");

        $response->assertStatus(403);
    }

    public function test_guest_cannot_update_{{modelName}}(): void
    {
        ${{modelNameLower}} = {{modelName}}::factory()->create();

        $data = [
            'type' => '{{resourceType}}',
            'id' => (string) ${{modelNameLower}}->id,
            'attributes' => [
                'name' => 'Guest Update'
            ]
        ];

        $response = $this->jsonApi()
            ->expects('{{resourceType}}')
            ->withData($data)
            ->patch("/api/v1/{{resourceType}}/{${{modelNameLower}}->id}");

        $response->assertStatus(401);
    }

    public function test_cannot_update_nonexistent_{{modelName}}(): void
    {
        $admin = $this->getAdminUser();

        $data = [
            'type' => '{{resourceType}}',
            'id' => '999999',
            'attributes' => [
                'name' => 'Nonexistent Update'
            ]
        ];

        $response = $this->actingAs($admin, 'sanctum')
            ->jsonApi()
            ->expects('{{resourceType}}')
            ->withData($data)
            ->patch('/api/v1/{{resourceType}}/999999');

        $response->assertStatus(404);
    }

    public function test_cannot_update_{{modelName}}_with_invalid_data(): void
    {
        $admin = $this->getAdminUser();
        ${{modelNameLower}} = {{modelName}}::factory()->create();

        $data = [
            'type' => '{{resourceType}}',
            'id' => (string) ${{modelNameLower}}->id,
            'attributes' => [
                'name' => '', // Empty name
                'is_active' => 'invalid_boolean'
            ]
        ];

        $response = $this->actingAs($admin, 'sanctum')
            ->jsonApi()
            ->expects('{{resourceType}}')
            ->withData($data)
            ->patch("/api/v1/{{resourceType}}/{${{modelNameLower}}->id}");

        $response->assertStatus(422);
    }
}
